<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bo6background2"
    tools:context=".welcomeScreen">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/allerta_stencil"
        android:text="Black Op Agent: "
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <Button
        android:id="@+id/btn_v_wel_userLoadouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/allerta_stencil"
        android:text="View your Loadouts"
        android:textAlignment="center"
        android:textSize="24sp"
        app:cornerRadius="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_wel_make" />

    <Button
        android:id="@+id/btn_v_wel_make"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/allerta_stencil"
        android:text="Make Loadout"
        android:textAlignment="center"
        android:textSize="30sp"
        app:cornerRadius="0sp"
        app:layout_constraintStart_toStartOf="@+id/btn_v_wel_search"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_wel_search" />

    <Button
        android:id="@+id/btn_v_wel_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/allerta_stencil"
        android:text="Search Loadouts"
        android:textAlignment="center"
        android:textSize="30sp"
        app:cornerRadius="0sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_v_welcome_user" />

    <TextView
        android:id="@+id/tv_v_welcome_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/allerta_stencil"
        android:text="user"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/allerta_stencil"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_v_wel_allLoadouts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/allerta_stencil"
        android:text="View All Loadouts"
        android:textSize="24sp"
        app:cornerRadius="0sp"
        app:layout_constraintStart_toStartOf="@+id/btn_v_wel_userLoadouts"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_wel_userLoadouts" />

    <Button
        android:id="@+id/btn_v_wel_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="63dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="63dp"
        android:fontFamily="@font/allerta_stencil"
        android:text="Sign Out"
        android:textSize="26sp"
        app:cornerRadius="0sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_v_wel_userLoadouts"
        app:layout_constraintStart_toStartOf="@+id/btn_v_wel_allLoadouts"
        app:layout_constraintTop_toBottomOf="@+id/btn_v_wel_allLoadouts" />
</androidx.constraintlayout.widget.ConstraintLayout>